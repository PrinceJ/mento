<!doctype html>
<html lang="en" class="no-js">
<head>
    <meta name="layout" content="admin"/>
    <title>Admin DashBoard</title>

    <asset:link rel="icon" href="favicon.ico" type="image/x-ico"/>
</head>

<body>

<!-- Page Loader -->
<div class="page-loader-wrapper">
    <div class="loader">
        <div class="preloader">
            <div class="spinner-layer pl-red">
                <div class="circle-clipper left">
                    <div class="circle"></div>
                </div>

                <div class="circle-clipper right">
                    <div class="circle"></div>
                </div>
            </div>
        </div>

        <p class="white-text">Please wait...</p>
    </div>
</div>
<!-- #END# Page Loader -->
<main>
    <!-- //////////////////////////////////////////////////////////////////////////// -->
    <div class="row center">
        <h1>University Of Ilorin</h1>
    </div>

    <div class="row">
        <div class="col s3">
            <div class="card horizontal row">
                <div class="card-stacked col s7">
                    <div class="card-content yellow-text text-darken-3">
                        <span class="card-title"><h5>20</h5></span>

                        <p>Departments</p>
                    </div>
                </div>

                <div class="card-image col s5">
                    <i class="blue-text text-accent-5 waves-effect fa fa-book large"></i>
                </div>
            </div>
        </div>

        <div class="col s3">
            <div class="card horizontal row">
                <div class="card-stacked col s7">
                    <div class="card-content blue-text text-accent-3">
                        <span class="card-title"><h5>12</h5></span>

                        <p>Faculties</p>
                    </div>
                </div>

                <div class="card-image col s5">
                    <i class="yellow-text text-darken-4 waves-effect mdi mdi-hospital-building large"></i>
                </div>
            </div>
        </div>

        <div class="col s3">
            <div class="card horizontal row">
                <div class="card-stacked col s7">
                    <div class="card-content pink-text text-darken-2 bold">
                        <span class="card-title "><h5>12</h5></span>

                        <p>Students</p>
                    </div>
                </div>

                <div class="card-image col s5">
                    <i class="purple-text waves-effect mdi mdi-face-profile large"></i>
                </div>
            </div>
        </div>

        <div class="col s3">
            <div class="card horizontal row">
                <div class="card-stacked col s7">
                    <div class="card-content red-text text-accent-3">
                        <span class="card-title "><h5>12</h5></span>

                        <p>Settings</p>
                    </div>
                </div>

                <div class="card-image col s5">
                    <i class="red-text waves-effect mdi mdi-settings large"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- //////////////////////////////////////////////////////////////////////////// -->

</main>

</body>
</html>

